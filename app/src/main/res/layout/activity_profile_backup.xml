<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/content_profile" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            android:background="@color/orginalThemeColorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="   "
            app:titleEnabled="false">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
                app:title="   "
                app:titleEnabled="false">

                <RelativeLayout
                    android:id="@+id/profile_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp">

                    <com.pkmmte.view.CircularImageView
                        app:shadow="true"
                        app:border="true"
                        app:border_color="@android:color/holo_blue_dark"
                        app:border_width="2dp"
                        android:id="@+id/user_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"

                        />

                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"
                        android:layout_toLeftOf="@+id/user_avatar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        />

                    <ImageView
                        android:id="@+id/log_out"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.5"
                        android:background="@drawable/camera_placeholder"
                        android:padding="10dp"
                        android:src="@drawable/log_out" />


                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/log_out"
                        android:alpha="0.5"
                        android:background="@drawable/camera_placeholder"
                        android:src="@drawable/ic_camera" />


                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?android:attr/actionBarSize"
                android:padding="10dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <TextView
                    android:id="@+id/txt_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="موجودی (ریال)"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txt_account_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13132131"
                    android:layout_below="@+id/txt_availability"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="#000000" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_account_availability"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    app:cardBackgroundColor="#f9f8f3"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/txt_account_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="اطلاعات کاربری"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="#cb5958" />

                            <Button
                                android:id="@+id/btnEditProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/button_style"
                                android:drawableLeft="@drawable/ic_profile"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="ویرایش پروفایل"
                                android:textColor="#aeadb2" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/txt_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="10dp"
                                android:text="شماره همراه"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#b8b8ac" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:text="نام کاربری"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#b6b6aa"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/txt_phone_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="10dp"
                                android:text=""
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#939484"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#b6b6aa"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:text="برداشت"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnWithDraw"
                    android:layout_alignBaseline="@+id/txt_account_availability"
                    android:layout_alignBottom="@+id/txt_account_availability"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:text="افزایش"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAdd"
                    android:layout_alignBaseline="@+id/txt_account_availability"
                    android:layout_alignBottom="@+id/txt_account_availability"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <Button
                    android:text="رمز"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btnChangePass"/>


            </RelativeLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
